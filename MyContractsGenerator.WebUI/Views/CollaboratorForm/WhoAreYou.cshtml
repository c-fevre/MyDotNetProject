@using MyContractsGenerator.Common
@model MyContractsGenerator.WebUI.Models.CollaboratorFormModels.CollaboratorFormMainModel

@{
    ViewBag.Title = Resources.CollaboratorForm_Step1_Title;
    Layout = "~/Views/CollaboratorForm/_LayoutCollaboratorForm.cshtml";
}

@using (Html.BeginForm("Checkin", "CollaboratorForm", FormMethod.Post, new { id = "email-check-form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.c)
    @Html.HiddenFor(m => m.fa)

    <div class="row">
        <div class="col-md-12 mb50">
            <div class="col-md-6 col-md-offset-3">
                <div class="center">
                    <img src='@Url.Content("~/Content/images/MCG_logo.jpg")' class="login-logo" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.ValidationSummary()
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(m => m.Email, new { @class = "control-label" })</div>
                <div>@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })</div>
                <div>@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })</div>
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(m => m.Password, new { @class = "control-label" })</div>
                <div>@Html.PasswordFor(m => m.Password, new { @class = "form-control" })</div>
                <div>@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })</div>
            </div>
            <div class="form-group">
                <div>
                    <input id="login" type="submit" value="@Resources.Login_ConnexionButton" class="btn btn-info"/>
                </div>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>


}